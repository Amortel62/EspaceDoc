{% extends 'base.html.twig' %}

{% block title %}{% trans %}Accueil{% endtrans %}{% endblock %}

{% block body %}


<div class="jumbotron">
  <h1 class="display-4">{% trans %}Salut{% endtrans %}{% if is_granted('IS_AUTHENTICATED_FULLY')  %}, {{ app.user.prenom }} {% endif %} !</h1>
  <p class="lead">{% trans %}Bienvenue sur DocStock, le site qui te permet de stocker tes documents !{% endtrans %}</p>
  <hr class="my-4">

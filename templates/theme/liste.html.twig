{% extends 'base.html.twig' %}

{% block title %}Liste des thèmes{% endblock %}

{% block body %}
    <h1> Liste des thèmes </h1>

    {% if not listeThemes is empty %}
         {{ form_start(form)}} 
        <table class="table">

            <tr>
                <th>Libelle</th>
                <th></th>
                <th></th>
                    {% for key,value in listeThemes %}
            </tr>
            <tr>
                <td><a href="">{{ value.libelle }}</a></td>
                <td><a href="{{ path('theme_modifier',{'id':value.id})}}">Modifier</td>
                <td><input type="checkbox" name="cocher[]"value="{{ value.id }}"/></td>
            </tr>
                    {% endfor %}
        </table>
        
         <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            {{ form_widget(form.save) }}
        </div>
    </div>
        {{ form_end(form)}}
    {% else %}
        Aucun thème à afficher
    {% endif %}
{% endblock %}

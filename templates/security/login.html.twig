{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="h1 mb-5">{% trans %}Se connecter{% endtrans %}</h1>
        <div class="input-group mb-3">   
            <div class="input-group-prepend">
                <label for="inputUsername" class="input-group-text">{% trans %}Pseudo{% endtrans %}</label>
            </div>
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="{% trans %}Pseudo{% endtrans %}" required autofocus>
        </div>
        <div class="input-group mb-3">   
            <div class="input-group-prepend">
                <label for="inputPassword" class="input-group-text">{% trans %}Mot de passe{% endtrans %}</label>
            </div>
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="{% trans %}Mot de passe{% endtrans %}" required>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
               >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html
    
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-secondary float-right" type="submit">
            {% trans %}Se connecter{% endtrans %}
        </button>
    </form>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Liste des fichiers{% endblock %}

{% block body %}
    <h1 class="h1-responsive mb-5"> Liste des fichiers </h1>

    {% if not listeFichiers is empty %}
        {{ form_start(form)}} 
        <table id='table' data-order='[[ 0, "asc" ]]' data-page-length='10' class="display nowrap">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Utilisateur</th>
                    <th>Thème</th>
                    <th>Nom</th>
                    <th>Nom Original</th>
                    <th>Date</th>
                    <th>Extension</th>
                    <th>Taille</th>
                    <th><i class="fas fa-edit"></i></th>
                    <th><i class="fas fa-trash-alt"></i></th>
                </tr>
            </thead>
            <tbody>
                {% for key,value in listeFichiers %}
                    <tr>
                        <td>{{ value.user.id }}</td>
                        {% if value.user.nom is not null %}
                            <td>{{ value.user.nom }}</td>
                        {% else %}
                            <td>Pas de nom attribué</td>
                        {% endif %}
                        <td>
                            {% for key,value in value.themes %}
                                {% if loop.last ==  false%}
                                    {{ value.libelle }} /
                                {% else %}
                                    {{ value.libelle }}
                                {% endif %}
                            {% endfor %}
                        </td>
                        <td><a href="{{ path('download',{'id':value.id}) }}">{{ value.nom }}</a></td>
                        <td>{{ value.nomoriginal }}</td>
                        <td>{{ value.date|date("d-m-Y") }}</td>
                        <td>{{ value.extension }}</td>
                        <td>{{ value.taille }}</td>               
                        <td><a href="{{ path('fichier_modifier',{'id':value.id})}}">Modifier</a></td>
                        <td><input type="checkbox" name="cocher[]"value="{{ value.id }}"/></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
     
 
                {{ form_widget(form.save) }}

        {{ form_end(form)}}
    {% else %}
        Aucun fichier à afficher
    {% endif %}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Liste des fichiers{% endblock %}

{% block body %}
    <h1> Liste des fichiers </h1>

    {% if not listeFichiers is empty %}
         {{ form_start(form)}} 
        <table class="table">

            <tr>
              
                <th>Nom</th>
                <th>Nom Original</th>
                <th>Date</th>
                <th>Extension</th>
                <th>Taille</th>
                
                    
                    {% for key,value in listeFichiers %}
            </tr>
            <tr>
             
                <td><a href="{{ path('download',{'id':value.id}) }}">{{ value.nom }}</a></td>
                <td>{{ value.nomoriginal }}</td>
                <td>{{ value.date|date("d-m-Y : H-m") }}</td>
                <td>{{ value.extension }}</td>
                <td>{{ value.taille }}</td>               
                <td><a href="{{ path('fichier_modifier',{'id':value.id})}}">Modifier</td>
                <td><input type="checkbox" name="cocher[]"value="{{ value.id }}"/></td>
                
            </tr>
                    {% endfor %}
        </table>
         <div class="pagination">
            {{ knp_pagination_render(listeFichiers) }}
        </div>
         <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            {{ form_widget(form.save) }}
        </div>
    </div>
        {{ form_end(form)}}
    {% else %}
        Aucun fichier Ã  afficher
    {% endif %}
{% endblock %}
